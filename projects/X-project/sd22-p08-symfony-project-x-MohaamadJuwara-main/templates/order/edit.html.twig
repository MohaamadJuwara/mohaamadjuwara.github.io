{% extends 'base.html.twig' %}

{% block title %}Bestel jouw pizza nu!!{% endblock %}

{% block body %}

    <figure>
        <img class="img-fluid" src="{{ asset('img/trainbanner.jpeg') }}" style="height: 200px" width="3000px">
    </figure>

    <h1 class="bg-dark text-white">Welcome to the bestel pagina</h1>
    {%  for label, messages in app.flashes %}
        {%  for msg in messages %}

            {{ msg }}

        {%  endfor %}
    {%  endfor %}

    <div class="row">

        <tb class="col-8">

            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Address</th>
                    <th>size</th>
                    <th>Delete</th>
                    <th>Update</th>
                    <th>Create</th>
                    <th>Read</th>
                </tr>
                </thead>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.name }} </td>
                        <td>{{ order.surname }}</td>
                        <td>{{ order.address }}</td>
                        <td>{{ order.size }}</td>
                        <td class="pt-1">
                            <a href="{{ path('app_delete_order', {'order' : order.id}) }}" class="btn btn-sm p-1 btn-outline-warning">Delete</a>
                        </td>
                        <td class="pt-1">
                            <a href="{{ path('app_update_order', {'order' : order.id}) }}" class="btn btn-sm p-1 btn-outline-danger">Update</a>
                        </td>
                        <td class="pt-1">
                            <a href="{{ path('app_update_order', {'order' : order.id}) }}" class="btn btn-sm p-1 btn-outline-info">Create</a>
                        </td>
                        <td class="pt-1">
                            <a href="{{ path('app_update_order', {'order' : order.id}) }}" class="btn btn-sm p-1 btn-outline-success">Read</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </tb>
    </div>





    {% include "sport/footer.html.twig" %}

{% endblock %}

