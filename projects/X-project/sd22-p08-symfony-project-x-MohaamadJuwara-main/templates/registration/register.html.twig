{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <figure>
        <img class="img-fluid" src="{{ asset('img/trainbanner.jpeg') }}" style="height: 200px; width: 100%;" alt="Train Banner">
    </figure>
    <h1 class="bg-dark text-white text-center p-3">Welcome to our register page</h1>

    <div class="container mt-5">
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <div class="form-group">
            {{ form_row(registrationForm.no, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password',
                'attr': {'class': 'form-control'}
            }) }}
        </div>
        <div class="form-group form-check">
            {{ form_row(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} }) }}
            <label class="form-check-label" for="registrationForm_agreeTerms">Agree to terms</label>
        </div>
        <button type="submit" class="btn btn-info">Register</button>
        {{ form_end(registrationForm) }}
    </div>

    {% include "sport/footer.html.twig" %}
{% endblock %}
